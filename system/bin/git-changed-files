#!/bin/bash

function has_arg () {
  for arg in $2; do
    if [ "$arg" == "$1" ]; then
      return 0
    fi
  done

  return 1
}

if has_arg "-b" $@ || has_arg "--include-branch-commits" $@; then
  git diff --name-only $(git merge-base HEAD $(git-main-branch))
  git ls-files -o --exclude-standard
else
  git diff --name-only
  git ls-files -o --exclude-standard
fi
